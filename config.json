{
    "comment": "This is the training config for MFTrainer",
    "models": {
        "vae": {
            "mode": "train",
            "location": "gpu",
            "data_type": "float32",
            "cpu_when_idle": true,
            "optimizer": {
                "type": "lion-pytorch",
                "weight_decay": 0.100,
                "lr": 5e-5
            },
            "optimizations": {
                "slicing": true
            }
        }
    },
    "hardware": {
        "gpu": {
            "type": "cuda",
            "gpuid": 0
        }
    },
    "datasets": {
        "main": {
            "class": "mf.datasets.diffusiondataset.MFBucketedDataset",
            "subfolder": ["MFQ", "HAAP sample"],
            "buckets": ["512x512", "384x768", "768x384"],
            "shuffle_each_epoch": true
        },
        "lr_finding": {
            "class": "mf.datasets.vaedataset.CenterMFVAEDataset",
            "train_size": 640,
            "resize": -1,
            "subfolder": "MFQ_lr"
        }
    },
    "tasks": [
        {
            "type": "loop",
            "num_loops": 3,
            "tasks": [
                {
                    "type": "vae_validation",
                    "dataset": "lr_finding"
                },
                {
                    "type": "vae_training",
                    "dataset": "main",
                    "training_params": {
                        "batch_size": 2,
                        "gradient_accumulation_steps": 1,
                        "dataset_workers": 4,
                        "repeats": 0,
                        "train_encoder": false,
                        "train_decoder": true
                    }
                },
                {
                    "type": "save",
                    "models": ["vae"],
                    "data_type": "float32",
                    "save_versions": true,
                    "also_save_ckpt": true
                }
            ]
        }
    ]
}